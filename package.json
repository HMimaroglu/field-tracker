{
  "name": "field-crew-time-tracker",
  "version": "0.1.0",
  "private": true,
  "description": "Production-quality offline-first mobile time tracking system for field service crews",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "tap tests/e2e-integration.test.js",
    "test:mobile": "tap apps/mobile/tests/*.test.js",
    "test:server": "tap server/tests/*.test.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "prettier": "^3.0.3",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2",
    "tap": "^18.6.1",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "@types/node": "^20.10.5"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}