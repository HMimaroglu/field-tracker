# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/fieldtracker

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# CORS Settings
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Admin Authentication
ADMIN_PASSWORD=admin123

# License Public Key (for validation)
LICENSE_PUBLIC_KEY=your_ed25519_public_key_here

# File Storage Configuration
STORAGE_TYPE=local # 'local' or 's3'
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=200KB

# S3 Configuration (if STORAGE_TYPE=s3)
S3_BUCKET=field-tracker-photos
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT= # Optional: for MinIO or other S3-compatible services

# JWT Secret (for session management)
JWT_SECRET=your_super_secret_jwt_key_here

# Sync Configuration
SYNC_BATCH_SIZE=100
MAX_SYNC_CONFLICTS=50

# Logging
LOG_LEVEL=info
LOG_FORMAT=json